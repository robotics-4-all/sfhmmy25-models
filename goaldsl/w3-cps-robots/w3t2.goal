Entity minime_pose
    type: sensor
    uri: "streamsim.{UID}.minime.pose"
    source: LocalRedis
    freq: -1.0
    attributes:
        - position: dict
        - orientation: dict
end

Entity minime_crash
    type: sensor
    uri: "streamsim.{UID}.minime.crash"
    source: LocalRedis
    freq: -1.0
    attributes:
        - position: dict
        - orientation: dict
end

Entity minime_motion_set
    type: actuator
    uri: "streamsim.{UID}.minime.actuator.motion.twist.minime_skid_steer.set"
    source: LocalRedis
    attributes:
        - linear: float
        - angular: float
end

Entity minime_poi_command
    type: sensor
    uri: "streamsim.{UID}.minime.move.poi"
    source: LocalRedis
    attributes:
        - poi: str
        - linear: float
        - angular: float
end

// ------------------- GOALS --------------------------------------
// ----------------------------------------------------------------

Goal<EntityPyCondition> LinearAlarm_Triggered
    condition:
        "len(sn_linearalarm_188_data.value) > 0 or len(sn_linearalarm_189_data.value) > 0 or len(sn_linearalarm_193_data.value) > 0 or len(sn_linearalarm_194_data.value) > 0 or len(sn_linearalarm_195_data.value) > 0 or len(sn_linearalarm_196_data.value) > 0 or len(sn_linearalarm_198_data.value) > 0 or len(sn_linearalarm_201_data.value) > 0"
    timeConstraints:
        - FOR_TIME(0.1)  // Filter jitters
end

Goal<EntityStateChange> Minime_Crash
    entity: minime_crash
end

Goal<Position> Reach_Mall
    entity: minime_pose
    position: Point3D(93.71, 5.59, 0)
    maxDeviation: 1
end

Goal<EntityStateChange> Uses_GotoPoi_Command
    entity: minime_poi_command
end

// ----------------------------------------------------------------

Scenario W3_T2
    goals:
        - Reach_Mall
    fatals:
        - LinearAlarm_Triggered
        - Minime_Crash
        - Uses_GotoPoi_Command
    concurrent: True
end
