        username: ''
        password: ''
end

Broker<Redis> LocalRedis
    host: 'localhost'
    port: 6379
    auth:
        username: ''
        password: ''
end

RTMonitor
    broker: LocalRedis
    eventTopic: "goaldsl.{U_ID}.event"
    logsTopic: "goaldsl.{U_ID}.log"
end

Entity sn_linearalarm_188_data
    type: sensor
    uri: "streamsim.{UID}.world.world.sensor.alarm.linear_alarm.sn_linearalarm_188.data"
    source: LocalRedis
    freq: 0.5
    attributes:
        - value: list
end

